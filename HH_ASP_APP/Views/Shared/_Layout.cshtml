@using System.Security.Claims;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HH_ASP_APP.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body class="bg-light">
    @if (IsSectionDefined("Sidebar"))
    {
        <style>
            #content {
                transition: margin-left 0.3s ease; /* Dodanie płynnego przejścia animacji */
                margin-left: 300px; /* Margines początkowy, aby uwzględnić szerokość bocznego menu */
                overflow: hidden;
                flex: 1 1 auto;
            }

            @@media (max-width: 768px) {

                #content {
                    transition: margin-left 0.3s ease; /* Dodanie płynnego przejścia animacji */
                    margin-left: 0px; /* Margines początkowy, aby uwzględnić szerokość bocznego menu */
                    margin-top: 220px;
                    overflow: auto;
                }
            }
        </style>
    }

    <style>


        .sidebar2 {
            margin: 0;
            padding: 0;
            margin-top: -20px;
        }

            .sidebar2 ul {
                list-style-type: none;
                margin: 0;
                width: 300px;
                padding: 0;
                background-color: #212529;
                position: fixed;
                height: 100%;
                overflow: hidden;
                transition: width 0.3s ease;
            }

                .sidebar2 ul li {
                    background-color: #666;
                    margin: 10px;
                }

            .sidebar2 li a {
                display: block;
                color: white;
                padding: 8px 16px;
                text-decoration: none;
            }

                .sidebar2 li a.active {
                    background-color: #04AA6D;
                    color: white;
                }

                .sidebar2 li a:hover:not(.active) {
                    background-color: #555;
                    color: white;
                }

        @@media (max-width: 768px) {
            .sidebar2 ul {
                width: 100%; /* zmniejszona szerokość na mniejszych ekranach */
                height: auto;
            }
        }
    </style>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark text-light bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand">HH</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Operation" asp-action="Index">Słownik operacji</a>
                        </li>                     
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <span class="nav-link disabled text-light">Zalogowany: @User?.FindFirst(x => x.Type == ClaimTypes.Email)?.Value </span>
                        </li>
                        <li class="nav-item">
                            <form asp-action="Logout" asp-controller="Account">
                                <input type="submit" value="Wyloguj" class="btn bg-success text-light rounded-2" />
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid bg-light">
        @if (IsSectionDefined("Sidebar"))
        {
            <div class="row h-100 d-flex">
                <div id="sidebar2" class="sidebar2 col-1">
                    @RenderSection("Sidebar", required: false)
                </div>

                <div id="content" class="col-11">
                    @RenderBody()
                </div>
            </div>
        }
        else
        {
            <div id="content" class="col-12">
                @RenderBody()
            </div>
        }
    </div>

    <footer class="border-top footer text-muted bg-dark text-light">
        <div class="container">
            &copy; 2023 - HH_ASP_APP
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
